<% layout('layout/boilerplate')%>

<div class="mx-auto">
    <div class="card-body mb-3">
        <h3 class="card-title"><b>Current Tags</b></h3>
        <button class="btn btn-success mb-3">
            <a href="/tags/new" class="text-white text-decoration-none">Add More Tag</a>
        </button>
        <table class="table table-striped table-bordered" id="tags-table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tag _id</th>
                    <th scope="col">Tag body</th>
                    <th scope="col">Tools</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0 ; i<tags.length ; i++) { %>
                <tr>
                    <th scope="row"><%=i+1%></td>
                    <td><%=tags[i]._id%></td>
                    <td><%=tags[i].body%></td>
                    <td>
                        <button class="btn btn-warning">Edit</button>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>